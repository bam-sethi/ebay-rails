<h2>Edit Customer</h2>

<%= form_for @customer do |customer| %>
  <div class="field">
  <%= customer.label :name %>
  <%= customer.text_field :name %>
  </div>
  <div class="field">
  <%= customer.label :age %>
  <%= customer.text_field :age %>
  </div>
  <div class="field">
  <%= customer.label :nationality %>
  <%= customer.text_field :nationality %>
  </div>
  <div class="action">
  <%=customer.submit "Update Customer", html: {class: "nifty-button"}%>
  </div>

<% end %>

