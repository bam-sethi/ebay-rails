
<% @reviews.each do |review| %>
  <% customer = Customer.find(review.customer_id) %>
  <% product = Product.find(review.product_id) %>


      <div class='customer' class='all'>
      <h4>Customer</h4>
      <p>Name: <%= link_to customer.name, customer %></p>
      <p>Age: <%= customer.age %></p>
      <p>Nationality: <%= customer.nationality %></p>
      </div>

    <div class='product' class='all'>
      <h4>Product</h4>
      <p><%= link_to product.name, product %></p>
      <p><%= truncate(product.description, length:200){ link_to 'see more', product } %></p>
      <p><%= number_to_currency(product.price, :unit=>'â‚¬') %></p>
    </div>

    <div class='review' class='all'>
        <h4>Review</h4>
        <p><%= link_to truncate(review.content, length:300) { link_to 'see more', review } %></p>
        <p><%= review.rating %></p>
      </div>
    <hr>
<% end %>

